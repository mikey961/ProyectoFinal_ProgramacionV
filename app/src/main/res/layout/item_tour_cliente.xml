<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ImagenTour"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del tour"/>

        <TextView
            android:id="@+id/tv_NombreTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:text="Nombre del tour"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_FechaTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:text="21/08/2025"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <TextView
            android:id="@+id/tv_HorasTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="4dp"
            android:text="*****"
            android:textSize="14sp"
            android:textColor="#555555"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonVerTour"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Ver tour"
            android:textAllCaps="true"
            android:backgroundTint="@color/Anaranjado"
            android:textColor="@color/white"
            android:paddingHorizontal="24dp"
            android:layout_gravity="end"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>